def count_zero(lst):
    count=0
    for i in lst:
        if(i==0):
            count+=1
        else:
            continue
    return count
lst=[]
ch=0
while(True):
    x = int(input("ENter the choice:- "))
    if(x==0):
        break 
    else:
        inpu_ = int(input("Enter the element in the list:- "))
        lst.append(inpu_) 

zero = count_zero(lst)
print(zero)
